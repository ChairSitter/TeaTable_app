<main>
    <h2>
        Create a Friend Request
    </h2>
    <%= form_with(model: @friend_request, local: true) do |form| %>
        <% if @friend_request.errors.any? %>
            <div id="error_explanation">
                <h2><%= pluralize(@friend_request.errors.count, "error") %> prohibited this friend request from being saved:</h2>
                <ul>
                    <% @friend_request.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <div class="field">
            <%= form.label :receiver_id %>
            <%= form.collection_select :receiver_id, User.all, :id, :username %>
        </div>

        <div class="actions">
            <%= form.submit "Send Friend Request" %>
        </div>
    <% end %>
</main>